              </div>
              <div class="form-check mb-4">
                <input class="form-check-input" type="checkbox" value="" id="add4">
                <label class="form-check-label ms-2" for="add4">
                  Setting
                </label>
              </div>
              <div class="form-check mb-4">
                <input class="form-check-input" type="checkbox" value="" id="add5">
                <label class="form-check-label ms-2" for="add5">
                  Task Menu
                </label>
              </div>
              <hr class="my-6">
            </div>

            <!-- Form: footer -->
            <div class="modal-footer border-0 py-4 px-0">
              <button type="button" class="btn btn-outline-danger rounded-1 fw-bold me-4 px-8" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-success rounded-1 px-8">Add</button>
            </div>
            
          </form>
        </div>
      </div>
    </div>
