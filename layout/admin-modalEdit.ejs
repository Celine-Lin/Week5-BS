<!-- Modal-Edit -->  
<div class="modal fade" id="modal-edit" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content rounded-1 p-4">
            <div class="modal-header border-bottom-0">
                <div class="fs-4 fw-bold">Edit Admin</div>
                <button 
                    type="button" 
                    class="btn-close" 
                    data-bs-dismiss="modal" 
                    aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <!-- Form: Account -->
                    <div class="mb-3">
                        <div class="fs-5 mb-4 fw-bold">Account</div>
                        <label for="edit-name" class="form-label fs-7">Name</label>
                        <input type="text" class="form-control bg-light border-0 p-4" id="edit-name" value="Emir Wicks" disabled readonly>
                    </div>
                    <div class="mb-3">
                        <label for="edit-email" class="form-label fs-7">Email</label>
                        <input type="text" class="form-control bg-light border-0 p-4" id="edit-email" value="emir.wicks@mail.com" disabled readonly>
                        <hr class="my-6">
                    </div>
                    <!-- Form: Verification -->
                    <div>
                        <div class="fs-5 mb-4 fw-bold">Verification</div>
                        <label for="validationEmail" class="form-label d-flex">
                            <span class="material-icons text-success fs-5 me-3">check_circle</span>
                            <span class="fs-6">Verified</span>
                            <span class="fs-7 ms-auto fw-normal">2020/4/12</span>
                        </label>
                        <input type="text" id="validationEmail" class="form-control p-4 fw-bold bg-transparent text-center disabled-text" placeholder="Send Verification Mail" disabled readonly>
                        <hr class="my-6">
                    </div>
                    <!-- Form: Access Level -->
                    <div>
                        <div class="fs-5 mb-4 fw-bold">Access Level</div>
                        <select class="form-select p-4 border-dark" aria-label="Default select example">
                            <option selected>Admin</option>
                            <option value="1">Editor</option>
                            <option value="2">User</option>
                        </select>
                        <hr class="my-6">
                    </div>
                    <!-- Form: Custom Access -->
                    <div class="custom-access">
                        <div class="fs-5 mb-4 fw-bold">Custom Access</div>
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" value="" id="access1">
                            <label class="form-check-label ms-2" for="access1">
                                Lecture
                            </label>
                        </div>
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" value="" id="access2">
                            <label class="form-check-label ms-2" for="access2">
                                Coupon
                            </label>
                        </div>
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" value="" id="access3">
                            <label class="form-check-label ms-2" for="access3">
                                Message
                            </label>
                        </div>
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" value="" id="access4">
                            <label class="form-check-label ms-2" for="access4">
                                Setting
                            </label>
                        </div>
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" value="" id="access5">
                            <label class="form-check-label ms-2" for="access5">
                                Task Menu
                            </label>
                        </div>
                        <hr class="my-6">
                    </div>
                    <!-- Form: Decativate Account -->
                    <div>
                        <div class="fs-5 mb-4 fw-bold">Deactivate Account</div>
                        <label 
                            class="form-label text-danger d-flex" 
                            for="deactivate-account">
                            <span class="material-icons me-3">warning</span>
                            <span> This cannot be undone!</span>
                        </label>
                        <input 
                            type="button" 
                            class="form-control my-4 py-4 btn btn-outline-danger fw-bold" 
                            id="deactivate-account" 
                            value="Deactive this account">
                    </div>
                    <!-- Form: footer -->
                    <div class="modal-footer border-0 py-4 px-0">
                        <button 
                            type="button" 
                            class="btn btn-outline-danger rounded-1 fw-bold me-4 px-8" 
                            data-bs-dismiss="modal">
                            Cancel
                        </button>
                        <button 
                            type="button" 
                            class="btn btn-success 
                            rounded-1 px-8">
                            Upate
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>